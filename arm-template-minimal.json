{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Azure Resume Challenge - Minimal Update Template",
    "author": "Abid Aslam"
  },
  "parameters": {
    "storageAccountName": {
      "type": "string",
      "defaultValue": "storresume1760986821",
      "metadata": {
        "description": "Existing storage account name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": {
        "description": "Location for resources"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-01-01",
      "name": "[format('{0}/default/$web', parameters('storageAccountName'))]",
      "properties": {
        "publicAccess": "Blob"
      }
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[parameters('storageAccountName')]"
    },
    "deploymentStatus": {
      "type": "string",
      "value": "Success - Static website container configured"
    }
  }
}